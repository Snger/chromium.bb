                        files=[env.File('${STAGING_DIR}/nacltest.js'),
                               env.File('${STAGING_DIR}/srpc_hw.nexe'),
                               env.File('${STAGING_DIR}/srpc_hw.html')])
env.AddNodeToTestSuite(node,
                       ['pyauto_tests'],
                       'run_pyauto_surfaway_test',
                       is_broken=env.PyAutoTesterIsBroken())
