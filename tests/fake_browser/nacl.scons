async_nexe_name = 'async_message_test_%s.nexe' % env.get('TARGET_FULLARCH')
async_message_prog = env.ComponentProgram(
    async_nexe_name, 'async_message_test.c')

spin_nexe_name = 'spin_%s.nexe' % env.get('TARGET_FULLARCH')
spin_prog = env.ComponentProgram(spin_nexe_name, 'spin.c')

deferred_nexe_name = 'deferred_srpc_init_%s.nexe' % env.get('TARGET_FULLARCH')
deferred_srpc_init_prog = env.ComponentProgram(
    deferred_nexe_name, 'deferred_srpc_init.c',
    EXTRA_LIBS=['srpc', 'pthread'])


