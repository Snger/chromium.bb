Import('env')

async_nexe_name = 'async_message_test_%s' % env.get('TARGET_FULLARCH')
async_message_prog = env.ComponentProgram(
    async_nexe_name, 'async_message_test.c',
    EXTRA_LIBS=['${NON_PPAPI_BROWSER_LIBS}', 'imc_syscalls'])

spin_nexe_name = 'spin_%s' % env.get('TARGET_FULLARCH')
spin_prog = env.ComponentProgram(spin_nexe_name, 'spin.c',
                                 EXTRA_LIBS=['imc_syscalls'])

deferred_nexe_name = 'deferred_srpc_init_%s' % env.get('TARGET_FULLARCH')
deferred_srpc_init_prog = env.ComponentProgram(
    deferred_nexe_name, 'deferred_srpc_init.c',
    EXTRA_LIBS=['srpc', 'imc_syscalls', 'platform', 'gio', 'pthread'])
