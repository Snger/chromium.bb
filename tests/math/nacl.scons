Import('env')

# TODO(jvoung): enable this on x86-64 once we either:
# stop generating SHRD, or have the validator accept SHRD
if (env['TARGET_ARCHITECTURE'] == 'x86' and env['BUILD_SUBARCH'] == '64' and
    ARGUMENTS.get('bitcode')):
   TEST_SUITES = []
else:
   TEST_SUITES = ['small_tests']

env.ComponentProgram('float_math.nexe', 'float_math.c',
                     EXTRA_LIBS=['m'])
node = env.CommandSelLdrTestNacl(
  'float_math.out',
  command=[env.File('float_math.nexe')],
  exit_status='55',
  )
env.AddNodeToTestSuite(node,
                       TEST_SUITES,
                       'run_float_math_test')
