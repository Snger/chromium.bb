Import('env')

# NOTE: the arm emulator does not handle atomic ops properly
is_broken = env.Bit('target_arm') and env.UsingEmulator()

simple_srpc_test_exe = env.ComponentProgram(
    'simple_srpc_test',
    'simple_srpc_test.c',
    EXTRA_LIBS=['google_nacl_imc',
                'google_nacl_imc_c',
                'nonnacl_srpc',
                'nrd_xfer',
                'nacl_base',
                'platform',
                'gio'])
node = env.CommandTest(
    'simple_srpc_test.out',
    command=[simple_srpc_test_exe])
env.AddNodeToTestSuite(node, ['small_tests'], 'run_simple_srpc_test',
                       is_broken=is_broken)

types_srpc_test_exe = env.ComponentProgram(
    'types_srpc_test',
    'types_srpc_test.c',
    EXTRA_LIBS=['google_nacl_imc',
                'google_nacl_imc_c',
                'nonnacl_srpc',
                'nrd_xfer',
                'nacl_base',
                'platform',
                'gio'])
node = env.CommandTest(
    'types_srpc_test.out',
    command=[types_srpc_test_exe])
env.AddNodeToTestSuite(node, ['small_tests'], 'run_types_srpc_test',
                       is_broken=is_broken)

