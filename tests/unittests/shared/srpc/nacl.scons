Import('env')

# NOTE: the arm emulator does not handle atomic ops properly
broken = env.Bit('target_arm') and env.UsingEmulator()

# Currently, run_simple_srpc_test_nexe does not pass the validator.
broken = env.Bit('target_arm')

env.ComponentProgram('simple_srpc_test.nexe',
                     ['simple_srpc_test.c'],
                     EXTRA_LIBS=['srpc',
                                 'google_nacl_imc_c',
                                 'google_nacl_imc',
                                 'google_nacl_platform',
                                 'gio',
                                 'pthread'])
node = env.CommandSelLdrTestNacl(
    'simple_srpc_test_nexe.out',
    command=[env.File('simple_srpc_test.nexe')],
    exit_status='0',
    )
env.AddNodeToTestSuite(node, ['small_tests'], 'run_simple_srpc_test_nexe',
                       broken=broken)

env.ComponentProgram('types_srpc_test.nexe',
                     ['types_srpc_test.c'],
                     EXTRA_LIBS=['srpc',
                                 'google_nacl_imc_c',
                                 'google_nacl_imc',
                                 'google_nacl_platform',
                                 'gio',
                                 'pthread'])
node = env.CommandSelLdrTestNacl(
    'types_srpc_test_nexe.out',
    command=[env.File('types_srpc_test.nexe')],
    exit_status='0',
    )
env.AddNodeToTestSuite(node, ['small_tests'], 'run_types_srpc_test_nexe',
                       broken=broken)

