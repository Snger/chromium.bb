import argparse
import os
import sys


def _AddToPathIfNeeded(path):
  if path not in sys.path:
    sys.path.insert(0, path)


def Main():
  catapult_path = os.path.abspath(os.path.join(
      os.path.dirname(__file__), os.path.pardir, os.path.pardir))
  parser = argparse.ArgumentParser()
  parser.add_argument('--appid', default='chromeperf')
  args = parser.parse_args()
  _AddToPathIfNeeded(catapult_path)
  from build import appengine_deploy
  dashboard_path = os.path.join(catapult_path, 'dashboard')
  appengine_deploy.AppcfgUpdate(dashboard_path, app_id=args.appid)


if __name__ == '__main__':
  Main()
