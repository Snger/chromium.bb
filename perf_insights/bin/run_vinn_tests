import os
import sys
import platform


if __name__ == '__main__':
  # TODO(nednguyen): enable this run_tests on Windows once the catapult recipe
  # is set up to run this on Windows.
  # https://github.com/catapult-project/catapult/issues/2031
  if platform.system() == 'Windows':
    print 'Tests are skipped on Windows'
    sys.exit(0)

  perf_insights_path = os.path.abspath(os.path.join(os.path.dirname(__file__),
                                                    '..'))
  sys.path.append(perf_insights_path)
  from perf_insights_build import run_vinn_tests
  sys.exit(run_vinn_tests.Main(sys.argv))
